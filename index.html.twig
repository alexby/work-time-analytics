                                "istrendzone": "",
                                "valueonright": "1",
                                "color": "cc0000",
                                "displayvalue": "Unbelievable",
                                "showontop": "1",
                                "thickness": "2"
                            }
                        ]
                    }
                ]
            }
        }).render("thisWeekChart");
    </script>
    <script>
        new FusionCharts({
            "type": "mscolumn2d",
            "width": "100%",
            "dataFormat": "json",
            "dataSource": {
                "chart": {
                    "caption": "This Week Daily Time",
                    "theme": "fint",
                    "showBorder": "1",
                    "borderColor": "#666666",
                    "borderThickness": "4",
                    "borderAlpha": "80",
                },
                "categories": [
                    {
                        "category": [
                            {
                                "label": "Mon"
                            },
                            {
                                "label": "Tues"
                            },
                            {
                                "label": "Wed"
                            },
                            {
                                "label": "Thu"
                            },
                            {
                                "label": "Fri"
                            },
                            {
                                "label": "Sat"
                            },
                            {
                                "label": "Sun"
                            }
                        ]
                    }
                ],
                "dataset": {{ thisWeeDailyData | json_encode() | raw }},
                "trendlines": [
                    {
                        "line": [
                            {
                                "startvalue": "7",
                                "endvalue": "",
                                "istrendzone": "",
                                "valueonright": "1",
                                "color": "fda813",
                                "displayvalue": "Cool",
                                "showontop": "1",
                                "thickness": "2"
                            },
                            {
                                "startvalue": "10",
                                "endvalue": "",
                                "istrendzone": "",
                                "valueonright": "1",
